project OpenGL is

   for Source_Dirs use ("../oglada-0.3");
   for Object_Dir use "obj";
   for Library_Name use "ogl";
   for Library_Dir use "lib";

   package Builder is
      for Default_Switches ("ada") use ("-s");
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use ("-gnat05", "-gnatn", "-fstack-check");
   end Compiler;

end OpenGL;

